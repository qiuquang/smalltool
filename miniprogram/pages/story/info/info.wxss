swiper, image{
  width: 100%;
  height: 370px;
}
.audio-wrapper{
  width: 640rpx;
  height: 100rpx;
  padding: 0 16px;
  box-sizing: border-box;
  margin: 80rpx auto 0;
  border-radius: 100px;
  background: #8e8e8e;
  display: flex;
  align-items: center;
}
.audio-play-pause{
  width: 32px;
  height: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}
.audio-play-pause:hover{
  background: #999999;
}
.audio-duration{
  width: 80px;
  font-size: 12px;
  text-align: center;
  margin-right: 8px;
}
.audio-duration text{
  margin: 0 3px;
}
van-slider{
  flex: 1;
}
.van-slider{
  background: #999999;
}
.van-slider__button-wrapper {
  right: 2px !important;
  background: #8e8e8e;
}