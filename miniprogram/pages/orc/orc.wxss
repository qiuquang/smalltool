button{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
scroll-view.content{
  height: calc(100vh - 185px);
  border: 1px solid #8e8e8e;
}
.container{
  width: 90vw;
  margin: 10px auto;
}
.van-radio{
  margin-top: 20px;
  margin-right: 30px;
  display: inline-flex !important;
}
.van-radio__label{
  margin-left: 5px !important;
}
.image-wrapper{
  width: 100%;
  height: 300rpx;
  border-radius: 4px;
  border: 1px solid #8e8e8e;
  display: flex;
  justify-content: center;
  align-items: center;
}
.image-wrapper image{
  width: 100%;
  height: 300rpx;
}